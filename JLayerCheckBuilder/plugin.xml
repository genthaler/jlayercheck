<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="jlayercheckBuilderID"
         name="JLayerCheck Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="jlayercheckbuilder.builder.JLayerCheckBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="jlayercheckNature"
         name="JLayerCheck Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="jlayercheckbuilder.builder.JLayerCheckNature">
         </run>
      </runtime>
      <builder
            id="JLayerCheckBuilder.jlayercheckBuilderID">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="JLayerCheckBuilder.contribution1">
         <action
               label="Add/Remove JLayerCheck Nature"
               class="jlayercheckbuilder.builder.ToggleNatureAction"
               menubarPath="additions"
               enablesFor="+"
               id="JLayerCheckBuilder.addRemoveNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="JLayerCheckBuilder.dependency"
         name="Dependency Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
